{
  "id": "nutriscan-app",
  "name": "NutriScan",
  "short_name": "NutriScan",
  "description": "Aplicación para reconocer alimentos y calcular calorías",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4CAF50",
  "orientation": "portrait",
  "dir": "ltr",
  "lang": "es",
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+nutriscan",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "widgets": [
    {
      "name": "NutriScan Widget",
      "short_name": "NutriScan",
      "description": "Muestra tus últimos escaneos de alimentos",
      "start_url": "/widget.html",
      "display": "standalone",
      "background_color": "#ffffff",
      "theme_color": "#4CAF50",
      "icons": [
        {
          "src": "img/icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "img/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/index.html",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg"]
      }
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "background_sync": {
    "periodic_sync": {
      "min_interval": 3600
    }
  },
  "push": {
    "subscription_url": "/api/push-subscription"
  },
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.nutriscan.app",
      "id": "com.nutriscan.app"
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://nutriscan.app"
    }
  ],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "screenshots": [
    {
      "src": "img/screenshots/home.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Pantalla de inicio de NutriScan"
    },
    {
      "src": "img/screenshots/camera.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Escaneo de alimentos"
    },
    {
      "src": "img/screenshots/results.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Resultados del análisis"
    }
  ],
  "categories": ["food", "health", "lifestyle"],
  "shortcuts": [
    {
      "name": "Escanear Alimento",
      "short_name": "Escanear",
      "description": "Abre la cámara para escanear un alimento",
      "url": "/?action=scan",
      "icons": [{ "src": "img/icons/scan.png", "sizes": "192x192" }]
    },
    {
      "name": "Historial",
      "short_name": "Historial",
      "description": "Ver historial de escaneos",
      "url": "/?action=history",
      "icons": [{ "src": "img/icons/history.png", "sizes": "192x192" }]
    }
  ]
}
